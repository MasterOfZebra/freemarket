server {
    listen 80;
    server_name _;

    # Set charset UTF-8 for all responses
    charset UTF-8;
    charset_types text/html text/xml text/plain text/css text/javascript application/javascript application/json;

    # Прокси API (ДОЛЖЕН БЫТЬ ПЕРВЫМ!)
    location /api/ {
        # Proxy to backend API - preserve /api/ prefix in path
        # /api/listings/wants -> http://backend:8000/api/listings/wants
        proxy_pass http://backend:8000/api/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Connection settings
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;

        # Debug logging
        access_log /var/log/nginx/api_access.log;
        error_log /var/log/nginx/api_error.log debug;

        # Handle proxy errors
        proxy_intercept_errors on;
        error_page 502 503 504 = @api_error;
    }

    # API error handler
    location @api_error {
        access_log /var/log/nginx/api_error.log;
        return 502 '{"error": "Backend API unavailable", "status": 502}';
    }

    # Прокси health-check backend (ДОЛЖЕН БЫТЬ ПЕРЕД /)
    location /health {
        proxy_pass http://backend:8000/health;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Assets with long-term caching (более специфичный, чем /)
    location /assets/ {
        root /usr/share/nginx/html;
        add_header Cache-Control "public, max-age=31536000, immutable";
    }

    # Frontend static files (ДОЛЖЕН БЫТЬ ПОСЛЕДНИМ - catch-all)
    location / {
        root /usr/share/nginx/html;
        try_files $uri $uri/ /index.html;
        add_header Cache-Control "no-store";
    }

    # Healthcheck для nginx
    location /nginx-health {
        return 200 'ok';
    }
}
